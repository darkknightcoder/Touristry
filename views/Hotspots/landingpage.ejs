<%- layout('layouts/boilerplate') %>

<div id="cluster-map"></div>

<div class="container">


<% for(let spot of spots) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if(spot.images.length) { %>
          <img class="img-fluid" src="<%=spot.images[0].url%>" alt="">
          <% } else { %>
          <img class="img-fluid" alt="" src="https://res.cloudinary.com/dyv9v6gdl/image/upload/v1696677799/Touristry/medvn3h6dse9fg5yyr9o.jpg">
          <% } %>  
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= spot.name %></h5>
          <p class="card-text"><%= spot.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= spot.location %></small>
          </p>
          <a href="/Hotspots/viewspot/<%=spot._id%>" btn btn-primary>View <%=spot.name%></a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const spots = { features: <%- JSON.stringify(spots)%> }
</script>


<script src="/jsSheets/clusterMap.js"></script>