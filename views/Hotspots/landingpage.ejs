<div class="content-wrapper">  
  <% for(let spot of spots) { %>
  <div class="news-card">
    <a href="/Hotspots/viewspot/<%=spot._id%>" class="news-card__card-link"></a>
    <% if(spot.images.length) { %>
      <img class="news-card__image" src="<%=spot.images[0].url%>" alt="">
    <% } else { %>
      <img class="news-card__image" alt="" src="https://res.cloudinary.com/dyv9v6gdl/image/upload/v1696677799/Touristry/medvn3h6dse9fg5yyr9o.jpg">
    <% } %>  
    <div class="news-card__text-wrapper">
        <h2 class="news-card__title"><%=spot.name%></h2>
      <div class="news-card__post-date">Jan 29, 2018</div>
        <div class="news-card__details-wrapper">
          <p class="news-card__excerpt"><%=spot.description%></p>
          <a href="/Hotspots/viewspot/<%=spot._id%>" class="news-card__read-more">View more <i class="fas fa-long-arrow-alt-right"></i></a>
        </div>
      </div>
    </div>     
  <% } %>
</div>
  



<div id="map-div">
  <a href="/Hotspots/viewspot/spotmap" id="map-button">
    Show Map <img id='map-favicon' src="https://icons-for-free.com/iconfiles/png/512/map+marker+icon-1320166085262793102.png" alt="">
  </a>
</div>

